
@{
    ViewData["Title"] = "GetCategories";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
    int count = 0;
}
@model List<CategoryDto>
<section class="content">
    <div class="container-fluid">
        <!-- Info boxes -->
        <!-- /.row -->
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <!-- Left col -->
            <div class="col-md-12">
                <!-- MAP & BOX PANE -->
                <!-- /.card -->
                <!-- /.row -->
                <!-- TABLE: LATEST ORDERS -->
                <div class="card">
                    <div class="card-header border-transparent">
                        

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>                          
                        </div>
                    </div>
                    <!-- /.card-header -->
                  
                        
                    
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table m-10px">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Kategori Ad</th>
                                        <th>Açıklama</th>
                                        <th>Sil</th>                                       
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tbody>
                                    <tr>
                                        <td><a>@count</a></td>
                                        <td>@item.CategoryName</td>
                                        <td><span class="badge badge-success">@item.Description</span></td>
                                            <td><a href="/AdminCategory/DeleteCategory/@item.CategoryId" class="btn btn-block btn-danger">Sil</a></td>
                                            <td><a class="btn btn-block btn-warning">Güncelle</a></td>
                                    </tr>
                               
                                </tbody>
                                }
                            </table>
                               
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                   
                    <!-- /.card-body -->
                    <div class="card-footer clearfix">
                        <a href="javascript:void(0)" class="btn btn-sm btn-info float-left">Place New Order</a>
                        <a href="javascript:void(0)" class="btn btn-sm btn-secondary float-right">View All Orders</a>
                    </div>
                    <!-- /.card-footer -->
                </div>
                <!-- /.card -->
            </div>
        </div>
                   
        <!-- /.row -->
    </div><!--/. container-fluid -->
</section>

